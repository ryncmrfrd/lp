{
    "manifest_version": 2,
    "name": "LP Auto Answer",
    "description": "it does your homework for you :)",
    "version": "1.0",
    "permissions": ["activeTab"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "img/favicon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.educationperfect.com/app/*game*"
            ],
            "js": ["app.js"]
        }
    ]
}